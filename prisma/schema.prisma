generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

// Schema define : By using this prisma it will convert below schema to table of SQL
model User {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  blocked   Boolean?
  role      Role     @default(USER)
}
